{
  "manifest_version": 3,
  "name": "Quick Notes",
  "version": "1.0.0",
  "action": {
    "default_popup": "index.html"
  },
  "permissions": [
    "storage",
    "tabs",
    "activeTab", 
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["https://jira.corp.adobe.com/*"],
      "js": ["src/content_scripts/jira.tsx"],
      "css": ["src/content_scripts/styles.css.js"]
    }
  ]
}